{
  "name": "__MSG_extensionName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/malja/dezi",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "cs",
  "background": {
    "scripts": [
      "src/browser_url_list.js",
      "src/api.js",
      "src/database.js",
      "src/background/onAlarm.js",
      "src/background/onInstall.js",
      "src/background/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Dezi",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "http://api.malcak.cz/dezi/*"
  ],
  "web_accessible_resources": [
    "src/content_scripts/modal.html"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://*/*"
      ],
      "css": [
        "src/content_scripts/modal.css"
      ],
      "js": [
        "src/content_scripts/inject.js"
      ]
    }
  ]
}